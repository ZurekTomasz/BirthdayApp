@model IEnumerable<AppModels.CollectGift>

@{
    ViewBag.Title = "Zarządzanie prezentami w zbiórce";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Dodaj nowy prezent", "Create", new { id = ViewBag.collectId }, null)
</p>
<table class="table">
    <tr>
        <th>
            Nazwa zbiórki
        </th>
        <th>
            Prezent zaproponował
        </th>
        <th>
            Nazwa prezentu
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Collect.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<hr />
@Html.ActionLink("Wróć do szczegółów prezentu", "Details", "Collects", new { id = ViewBag.collectId }, null)
