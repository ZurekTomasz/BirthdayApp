@model BirthdayApp.Models.IndexViewModel
@{
    ViewBag.Title = "Ustawienia konta";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>EntityID:</dt>
        <dd>
            <span> @ViewBag.userId </span>
        </dd>
        <dt>UserId:</dt>
        <dd>
            @foreach (var item in ViewBag.thisUserContext)
            {
                <span> @item.Id </span>
            }
        </dd>

        <dt>Email:</dt>
        <dd>
            @foreach (var item in ViewBag.oneUserContext)
            {
                <span> @item.Email </span>
            }
        </dd>

        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Zmień swoje hasło", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Ustal swoje hasło", "SetPassword")
            }
            ]
        </dd>

        <dt>Powiadomienia:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Wyłącz powiadomienia e-mail", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Włącz powiadomienia e-mail", "SetPassword")
            }
            ]
        </dd>

    </dl>
</div>
