@model IEnumerable<AppModels.CollectUser>

@{
    ViewBag.Title = "Zarządzanie użytkownikami w zbiórce";
}

<h2>@ViewBag.Title</h2>


<table class="table">
    <tr>
        <th>
            Nazwa zbiórki
        </th>
        <th>
            Nazwa użytkownika
        </th>
        <th>
            Czy dał pieniądze
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Collect.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GaveMoney)
        </td>
        <td>


        @if (item.GaveMoney)
        {
            @Html.ActionLink("Anuluj", "GaveMoney", "CollectUsers", new { id = item.Id }, null)
        }
        else
        {
            @Html.ActionLink("Potwierdź", "GaveMoney", "CollectUsers", new { id = item.Id }, null)
        }
        </td>
    </tr>
}

</table>

<hr />
@Html.ActionLink("Wróć do szczegółów prezentu", "Details", "Collects", new { id = ViewBag.ThisId }, null)
