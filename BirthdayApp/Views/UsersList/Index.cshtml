@model BirthdayApp.Models.UsersListBox

@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
            padding: 10pt;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Index", "UsersList", FormMethod.Post))
    {
        <p>#</p>
        @ViewBag.info1
        <p>#</p>
        <br />
        @Html.Label("Użytkownicy:")
        <br />
        <br />
        @Html.ListBoxFor(m => m.UsersListIds, Model.UsersList, new { @class = "listbox" })
        <br />
        <br />
        <input type="submit" value="Send" />
    }

    @Html.ActionLink("Wróć do zbiórki", "Details2", "Collects", new { id = ViewBag.id }, null)

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <link href="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css"
          rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <link href="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
    <script src="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/js/bootstrap-multiselect.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('.listbox').multiselect({
                includeSelectAllOption: true
            });
        });
    </script>

    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>

        
    }
</body>
</html>
